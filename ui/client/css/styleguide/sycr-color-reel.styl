.sycr-reel
  width 100%
  list-style-type none

.sycr-row
  margin-bottom 0

.sycr-color
  vertical-align top
  font-size 14px
  &:before
    content ''
    display block
    width 100%
    height 10px
    background-color rgba(c-black, 0.1)

.sycr-color-dark
  color c-white

.sycr-color-light
  color c-black-text

.sycr-color-name
  padding 10px
  display block
  opacity 0
  transition opacity 0.1s ease-in-out
  f-use-subheading()

.sycr-color:hover .sycr-color-name
  opacity 1

@media screen and (min-width: 768px)
  .sycr-section
    display inline-block
    vertical-align top
    width 50%

  .sycr-color
    width 20%

  .sycr-row
    margin-bottom 30px
