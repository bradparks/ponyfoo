.vw-conventional
  cursor pointer
  text-align left
  list-style-position inside
  margin-bottom 25px
  padding 10px
  background-color c-purple
  color c-white

.vw-conventional-message:only-child
  list-style none

.vw-conventional-remove
  float right
  line-height 35px
  color c-yellow
  &:hover
    color c-yellow-075

.vw-maintainer
  padding 20px

  .vw-title
    margin-top 0

@media only screen and (min-width: 768px)
  .vw-maintainer
    padding 20px 40px

  .vw-conventional-remove
    line-height 30px

@media only screen and (min-width: 1200px)
  .vw-maintainer.de-host
    padding-right 0
  .vw-maintainer-content
    padding-right 20px
    width calc(100% - 360px)
