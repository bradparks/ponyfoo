p.pt-time
  span='First presented '
  time(datetime=presentation.presented.datetime, aria-label=presentation.presented.title)='on ' + presentation.presented.text
section.pt-embed-container
  div.pt-embeds
    if presentation.youtube
      section.pt-video.pt-youtube
        iframe.pt-video-frame.pt-youtube-frame(
          allowfullscreen,
          allowtransparency,
          mozallowfullscreen,
          webkitallowfullscreen,
          frameborder='0',
          data-src='https://www.youtube.com/embed/' + presentation.youtube
        )
    else if presentation.vimeo
      section.pt-video.pt-vimeo
        iframe.pt-video-frame.pt-vimeo-frame(
          allowfullscreen,
          allowtransparency,
          mozallowfullscreen,
          webkitallowfullscreen,
          frameborder='0',
          data-src='https://player.vimeo.com/video/' + presentation.vimeo
        )
    else
      section.pt-video.pt-empty
        span.pt-empty-text
          span.fa.fa-warning
          span=' '
          span No live-recorded presentation video yet!
    if presentation.speakerdeck
      section.pt-speakerdeck
        iframe.pt-speakerdeck-frame(
          allowfullscreen,
          allowtransparency,
          mozallowfullscreen,
          webkitallowfullscreen,
          frameborder='0',
          data-src='https://speakerdeck.com/player/' + presentation.speakerdeck
        )
    else
      section.pt-speakerdeck.pt-empty
        span.pt-empty-text
          span.fa.fa-warning
          span=' '
          span No presentation slides yet!
section.pt-description.md-markdown!=presentation.description
ul.pt-resources.md-markdown
  each r in presentation.resources
    li.pt-resource
      a(href=r.url, target=r.target)!=r.title
