article.os-container.osp-list
  each item in projects
    section.osp-container.dc-colored
      h3.osp-name
        a.osp-link.lk-rainbows(
          href='https://github.com/' + item.repo,
          title='Check out the repository!',
          target='_blank'
        )=item.name
      span.osp-meta(data-repo=item.repo)
      div.osp-teaser=item.teaser
      div.md-markdown!=item.description
      if item.screenshot
      div.osp-screenshot-container
        a.osp-screenshot-link(
          href='https://github.com/' + item.repo,
          title='Check out the repository!',
          target='_blank'
        )
          img(src=item.screenshot, alt='')
