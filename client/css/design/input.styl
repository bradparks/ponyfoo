input,
textarea,
select
  display block
  width 100%
  padding 10px 8px
  line-height 18px // firefox defaults to 19.45px. I know.
  border none
  background-color darken(c-blue, 10%)
  color c-white
  outline none
  &:focus
    outline 1px dotted c-dark-turquoise
    background-color c-blue

textarea
  resize vertical
  min-height 280px
  max-height 900px

select
  height 38px
