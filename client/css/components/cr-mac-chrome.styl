.cr-overflow
  overflow hidden

.cr-wrapper
  position relative
  transform rotate(-20deg) rotateY(30deg) rotateZ(10deg)

  &:before
    pointer-events none
    position absolute
    content ''
    top 0
    right 0
    bottom -15px
    left -15px
    border-left 15px solid c-gray
    border-bottom 15px solid c-dark-gray
    border-top-right-radius 5px

.cr-titlebar
  background-color c-browser-gray

.cr-icon,
.cr-title
  display inline-block
  vertical-align middle

.cr-icon
  background-repeat no-repeat
  background-image url("data:image/png;base64,")
  background-size auto 12px
  width 12px
  height 12px
  margin-right 4px
  border-radius 6px

.cr-close
  background-position -65px 0
.cr-minimize
  background-position -39px 0
.cr-maximize
  background-position -52px 0

.cr-title
  margin-left 10px
  font-size 12px

.cr-favicon
  display inline-block
  vertical-align bottom
  width 16px
  height 16px
  margin-right 6px

.cr-titlebar,
.cr-content
  padding 10px

.cr-content
  overflow scroll
  background-color c-white

  //- makes element look like 3d paper stack by shaving off .mks-wrapper:before borders
  &:before
    position absolute
    content ''
    bottom -15px
    left calc(100% - 15px)
    border-bottom 15px solid c-white
    border-left 15px solid c-dark-gray

  //- makes element look like 3d paper stack by shaving off .mks-wrapper:before borders
  &:after
    position absolute
    content ''
    left -15px
    bottom calc(100% - 15px)
    border-left 15px solid c-white
    border-bottom 15px solid c-gray

  //- fixes common rendering bugs
  *,
  *:before,
  *:after
    position static !important
    content none !important

  blockquote
    padding-left 12px
    border-left 6px solid c-orange-dark
