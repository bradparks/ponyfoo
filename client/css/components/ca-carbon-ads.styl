w-ad = 300px

.ca-container
  position relative
  text-align left
  max-width w-ad
  height 140px
  margin 0 auto 25px

  &:empty
    display none

.ca-loading,
.ca-blocked
  font-style italic

.ca-support
  margin-top 20px

#carbonads + .ca-blocked
  display none

.ca-loading,
.ca-blocked,
#carbonads
  text-align center
  position absolute
  top 10px
  left 10px
  right 10px
  bottom 10px
  background-color c-white

.carbon-wrap
  text-align left

.carbon-img
  vertical-align top
  display inline-block
  text-align center
  margin-right 15px

.carbon-text
  vertical-align top
  display inline-block
  overflow hidden
  width 135px
  max-height 98px
  font-size 14px
  color c-black-text
  margin-bottom 20px

.carbon-img,
.carbon-text
  &:focus
    outline 1px dotted c-gray
  &:active
    outline 1px dotted c-pink

.carbon-poweredby
  lk-link()
  position absolute
  font-style italic
  font-size 11px
  margin-top 10px
  right 10px
  bottom 10px
