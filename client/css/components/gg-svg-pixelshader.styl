.gg-container svg
  display block

.gg-container rect
  transition all 0.1s ease-in-out

.gg-container:hover rect,
.gg-continuous rect
  animation-duration 0.7s
  animation-iteration-count infinite

  for offset in (1..107)
    &:nth-child({offset})
      animation-name logo-0
      animation-duration round(0.7s + offset * 0.01, 4)

  &[fill='#1a1a1a']
    animation-name logo-10
  &[fill='#333']
    animation-name logo-15
  &[fill='#4d4d4d']
    animation-name logo-20
  &[fill='#666']
    animation-name logo-30
  &[fill='#26ef00'],
  &[fill='#555'],
  &[fill='#444']
    animation-name logo-eye
  &[fill='#26e400'],
  &[fill='#999']
    animation-name logo-eye-core

.gg-container:hover .go-logo rect,
.gg-continuous .go-logo rect
  for offset in (108..223) // 116 for holiday hat
    &:nth-child({offset})
      if offset > 141
        animation-name logo-hat-white
        animation-duration round(0.4s + (offset - 141) * 0.05, 4)
      else
        if offset % 4 == 0
          animation-name logo-hat-yellow
        else if offset % 3 == 0
          animation-name logo-hat-orange
        else
          animation-name logo-hat-red
        animation-duration round(0.35s + (141 - offset) * 0.005, 4)

@keyframes logo-hat-white
  60%
    fill lighten(c-pink, 95%)
@keyframes logo-hat-yellow
  60%
    fill darken(c-yellow, 5%)
@keyframes logo-hat-red
  60%
    fill lighten(c-red, 20%)
@keyframes logo-hat-orange
  60%
    fill lighten(c-orange, 15%)

@keyframes logo-0
  20%
    fill c-pink
@keyframes logo-10
  20%
    fill lighten(c-pink, 10%)
@keyframes logo-15
  20%
    fill lighten(c-pink, 15%)
@keyframes logo-20
  20%
    fill lighten(c-pink, 20%)
@keyframes logo-30
  20%
    fill lighten(c-pink, 30%)
@keyframes logo-eye
  20%
    fill c-yellow-highlight
@keyframes logo-eye-core
  20%
    fill c-yellow
