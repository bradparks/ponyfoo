.md-markdown
  p,
  ul,
  ol,
  table,
  blockquote,
  code
    max-width 800px

  blockquote
    position relative
    margin 0
    padding 12px 12px 12px 48px
    background-color rgba(c-light, 0.55)

    &:before
      content '\201c'
      font-family Georgia, serif
      color c-orange-dark
      position absolute
      top 20px
      left 8px
      font-size 65px
      font-weight 700
      line-height 40px
      margin-right 10px

    h1,
    h2,
    h3,
    h4,
    h5,
    h6
      margin-top 0

    .md-code-block
      margin 0 -12px 0 -48px

      &:last-child
        margin-bottom -12px

  img
    &:first-child
      margin-top 0

    &:last-child
      margin-bottom 0

  p
    &:first-child
      margin-top 0

    &:last-child
      margin-bottom 0

  li
    margin-top 20px

    &:first-child
      margin-top 0

    > ul,
    > ol
      margin-top 20px

  a:not(.md-heading)
    lk-link()

  thead
    background-color lighten(c-green, 70%)

  tbody
    background-color lighten(c-green, 95%)

    tr:nth-child(even)
      background-color lighten(c-green, 90%)

  h1,
  h2,
  h3,
  h4,
  h5,
  h6
    margin-left -20px
    margin-right -20px
    padding 10px 40px

.md-heading
  color inherit
  &:focus
    outline 1px dotted c-gray
  &:active
    outline 1px dotted c-dark-gray

.md-markdown-inline
  display inline

  p
    display inline

.md-code-block
  padding 10px 40px
  margin 0 -20px

.md-markdown:not(.mm-content-html) .md-code-block + blockquote
  max-width inherit !important
  margin 0 -20px

.md-code-block .md-code
  display block

.md-markdown-summary
  p
    margin 10px 0

@media only screen and (min-width: 768px)
  .md-markdown
    h1,
    h2,
    h3,
    h4,
    h5,
    h6
      margin-left -40px
      margin-right -40px

  .md-code-block
    margin 0 -40px

  .md-markdown:not(.mm-content-html) .md-code-block + blockquote
    margin 0 -40px

@media only screen and (min-width: 1300px)
  .md-markdown
    p,
    ul,
    ol,
    table,
    blockquote,
    code
      max-width 900px

@media only screen and (min-width: 1400px)
  .md-markdown
    p,
    ul,
    ol,
    table,
    blockquote,
    code
      max-width 1000px

  .md-code-block
    margin 0 -400px 0 -40px // account for 360px in sidebar

  .md-markdown:not(.mm-content-html) .md-code-block + blockquote
    margin 0 -400px 0 -40px // account for 360px in sidebar
