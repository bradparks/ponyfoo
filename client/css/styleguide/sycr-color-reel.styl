.sycr-section
  display inline-block
  vertical-align top
  width 50%

.sycr-reel
  width 100%
  list-style-type none

.sycr-color
  vertical-align top
  width 20%
  height 45px
  font-size 14px
  &:before
    content ''
    display block
    width 100%
    height 10px
    background-color rgba(c-black, 0.1)

.sycr-color-dark
  color c-white

.sycr-color-light
  color c-black-text

.sycr-color-name
  padding 10px
  display block
  opacity 0
  transition opacity 0.1s ease-in-out
  f-use-subheading()

.sycr-color:hover .sycr-color-name
  opacity 1
