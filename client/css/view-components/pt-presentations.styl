.pt-list
  list-style-type none

.pt-list-standalone
  padding 40px 20px 0

.pt-title
  margin-bottom 0

.pt-time
  margin 0
  font-weight 300
  font-style italic

.pt-item
  position relative
  margin-bottom 60px
  padding-bottom 60px
  &:last-child
    margin-bottom 0
  &:before
    position absolute
    left 0
    right 0
    bottom 0
    height 4px
    content ''
    background linear-gradient(to right, c-white 40%, c-yellow-highlight 66%, c-orange 100%)
  &:nth-child(even):before
    background linear-gradient(to left,  c-white 40%, c-yellow-highlight 66%, c-orange 100%)

.pt-speakerdeck,
.pt-video
  min-height 230px
  margin-bottom 20px

.pt-video-frame,
.pt-speakerdeck-frame
  width 100%
  min-height 230px

.pt-container
  border-bottom 3px dotted c-yellow
  background-color c-yellow-highlight-04
  padding 20px

  &:nth-child(even)
    background-color c-yellow-highlight-04

  &:last-child
    border-bottom none

.pt-title
  margin-top 0

.ly-custom-subheadings .pt-title
  font-family f-subheading

.pt-resources
  margin-top 20px

.pt-resource
  line-height 30px

.pt-permalink
  margin-left 15px
  color c-pink
  background-color c-white
  &:focus
    outline 1px dotted c-gray
  &:active
    outline 1px dotted c-pink
  &:visited
    background-color c-pink-01
  &:hover
    text-shadow 1px 1px c-pink-light

.pt-standalone
  padding 20px

.pt-empty
  position relative
  background-color c-dark-gray

.pt-empty-text
  position absolute
  text-align center
  top 50%
  left 0
  right 0
  margin-top -15px
  line-height 30px
  font-size 20px
  font-weight 300

@media only screen and (min-width: 500px)
  .pt-video,
  .pt-video-frame,
  .pt-speakerdeck,
  .pt-speakerdeck-frame
    min-height 400px

@media only screen and (min-width: 800px)
  .pt-speakerdeck,
  .pt-video,
  .pt-description,
  .pt-resources
    display inline-block
    vertical-align top
    width 47%
    margin-bottom 0

  .pt-video,
  .pt-description
    margin-right 6%

  .pt-resources
    margin 0

  .pt-embed-container
    margin 20px -20px
    padding 20px
    background-color c-yellow-01

  .pt-embeds
    position relative

  .pt-video
    height 0

  .pt-video-frame,
  .pt-speakerdeck-frame
    position absolute
    top 0
    bottom 0
    width 48%

  .pt-video-frame
    left 0
  .pt-speakerdeck-frame
    right 0

@media only screen and (min-width: 1100px)
  .pt-video,
  .pt-video-frame,
  .pt-speakerdeck,
  .pt-speakerdeck-frame
    min-height 500px
