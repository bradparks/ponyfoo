.sr-header
  padding-left 20px
  padding-bottom 10px

.sr-title
  margin 0

.sr-note
  margin-top 0
  font-size 1.2em
  font-weight normal
  font-style italic
  color c-gray

.ly-custom-subheadings .sr-note
  font-family f-subheading

.sr-input
  background-color c-purple
  &:focus
    outline 1px dotted c-white
    background-color c-purple

@media only screen and (min-width: 768px)
  .sr-header
    padding-bottom 40px
