.sr-header
  padding-left 20px
  padding-bottom 10px

.sr-title
  margin 0

.sr-note
  margin-top 0
  font-size 1.2em
  font-weight normal
  font-style italic
  color c-gray
  f-use-subheading()

.sr-input
  background-color c-purple-01
  &:focus
    outline 1px dotted c-purple
    background-color c-purple-02

.sr-known-tags
  background-color c-yellow-highlight-04
  list-style-type none
  margin 20px 0

.sr-known-tag-container
  display inline-block
  padding 10px
  width 25%

.sr-known-tag
  background-color c-yellow-highlight-01
  padding 10px

.sr-known-tag-slug
  float right

.sr-known-tag-title
  font-size 28px
  f-use-subheading()

@media only screen and (min-width: 768px)
  .sr-header
    padding-bottom 40px
