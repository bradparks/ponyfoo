.sr-header
  padding-left 20px
  padding-bottom 10px

.sr-title
  margin 0

.sr-note
  margin-top 0
  font-size 1.2em
  font-weight normal
  font-style italic
  color c-gray
  f-use-subheading()

.sr-input
  background-color c-purple-01
  &:focus
    col-outline(c-purple)
    background-color c-purple-02

.sr-known-tags
  list-style-type none
  margin 40px 0 20px

.sr-known-tag
  position relative
  background-color c-yellow-highlight-01
  padding 20px
  &:before
    position absolute
    content ''
    top 0
    left 0
    right 0
    height 4px
    rainbow-simple(right)

.sr-known-tag-slug
  float right

@media only screen and (min-width: 768px)
  .sr-header
    padding-bottom 40px

  .sr-known-tags
    text-align center

  .sr-known-tag-container
    text-align left
    display inline-block
    padding-right 10px
    margin-bottom 40px
    width 50%

    &:nth-child(even)
      padding-left 10px
      padding-right 0
