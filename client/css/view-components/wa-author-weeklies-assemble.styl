.wa-actions
  text-align right
  margin-top 40px

.wa-cancel,
.wa-discard
  display inline-block
  color c-black-text
  margin-right 15px

.ly-custom-subheadings
  .wa-cancel,
  .wa-discard
    font-family f-subheading

.wa-summary
  min-height 150px

.wa-tool
  border-left 2px dashed c-dark-gray
  display block
  background-color c-yellow
  text-align left
  padding 10px
  &:active
    outline 1px dotted c-purple
  &:hover
    background-color c-yellow-075

.wa-section-header
  border-right 2px dashed c-dark-gray
  background-color c-black-text
  color c-white
  text-align left

.wa-section
  background-color c-orange-005
  color c-black-text
  input,
  textarea,
  select
    background-color transparent
    color inherit
    &:focus
      background-color c-orange-06
  input,
  textarea
    placeholders(c-orange-dark)

.wa-section-heading,
.wa-section-clone,
.wa-section-toggle,
.wa-section-remove
  padding 10px

.wa-section-clone,
.wa-section-toggle,
.wa-section-remove
  float right
  cursor pointer
  &:active
    outline 1px dotted c-yellow-highlight
  &:hover
    background-color c-black-light

.wa-editor
  border 2px dashed c-dark-gray
  min-height 350px

.wa-link-checkbox-wrapper
  padding 6px 10px 7px

.wa-link-description
  min-height 50px

.wa-preview
  margin 60px auto 20px

.wa-input-50,
.wa-input-25
  display inline-block
  vertical-align middle

.wa-input-50
  width 50%
.wa-input-25
  width 25%

.wa-header-size
  display inline-block
  vertical-align middle
  width 53px

.wa-header-text
  display inline-block
  vertical-align middle
  width calc(100% - 58px)
  margin-right 5px

.wa-color-select
  display inline-block
  vertical-align middle
  width calc(50% - 17px)
.wa-color-preview
  width 34px

.wa-aside
  line-height 20px
  p
    margin 20px 0

  .ac-timing-item,
  .ac-campaign-item
    margin 5px 0

@media only screen and (min-width: 768px)
  .wa-main,
  .wa-aside
    vertical-align top
    display inline-block

  .wa-main
    width calc(100% - 225px)
    margin-right 20px

  .wa-aside
    width 205px
