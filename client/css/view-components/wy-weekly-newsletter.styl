.wy-container
  margin 0 auto
  padding 20px 0
  max-width 800px

  .md-markdown
    p
      line-height 22px
      margin 10px 0
      &:first-child
        margin-top 0
      &:last-child
        margin-bottom 0

.wy-table
  width 100%
  padding 0

.wy-td
  padding 0

.wy-header
  background-color c-pink-01
  border-bottom 1px solid c-pink
  padding 10px

.wy-section-thanks,
.wy-section-summary,
.wy-section-link,
.wy-section-markdown
  padding-top 25px

.wy-section-thanks
  padding 10px
  font-size 15px
  background-color c-light-green

.wy-header-text,
.wy-issue
  line-height 24px

.wy-section-header
  padding-top 40px
  h1,
  h2,
  h3,
  h4,
  h5,
  h6
    margin 0
  p
    line-height inherit

.wy-header-text
  color c-pink
  font-weight bold
  font-size 24px
  &:focus,
  &:active
    outline 1px dotted c-pink

.wy-content
  padding-bottom 25px
  a
    &:focus,
    &:active
      outline 1px dotted c-gray

.wy-issue
  float right
  font-size 12px

.wy-link-title
  display inline-block
  vertical-align bottom
  border-bottom 1px solid
  font-size 20px
  margin-right 10px
  margin-bottom 10px

.wy-link-tag
  display inline-block
  vertical-align bottom
  background-color c-blue
  color c-white
  text-transform uppercase
  font-size 13px
  margin-bottom 10px
  margin-right 5px
  padding 2px 4px

  &:last-child
    margin-right 0

.wy-link-description
  font-size 14px
  color #666

.wy-link-source-section
  margin-top 10px

.wy-link-source
  vertical-align middle
  color c-twitter-blue

.wy-link-source-plain
  color c-black-text

.wy-link-sponsor
  background-color c-orange-light
  color c-orange-dark

.wy-link-cell-before-image
  width 75%

.wy-link-image-cell
  padding-left 10px

.wy-link-image-anchor
  display block
  overflow hidden
  max-height 300px

.wy-link-image
  display block

.wy-footer
  text-align center

.wy-read-online
  font-size 13px
