.at-header
  margin-bottom 40px
  background-color c-white
  background linear-gradient(to bottom, c-white 0, c-pink-01 100%)

  code
    background-color c-white

.at-title
  padding 20px
  margin 0
  font-size 2.6em
  text-align center

  /.ly-custom-heading &
    font-size 3em

.at-teaser
  position relative
  text-align left
  f-use-subheading()
  &:after
    position absolute
    left 0
    right 0
    bottom 0
    height 4px
    content ''
    background linear-gradient(to right, c-white 0, c-yellow-highlight 33%, c-dark-orange 100%)

.at-teaser-markdown
  padding 10px

.at-no-hero
  .at-teaser
    color c-black-light

  .at-title
    background-color c-white
    background linear-gradient(to right, c-white 0, c-purple-01 100%)

.at-has-hero
  position relative
  background-repeat no-repeat, no-repeat
  background-position center center, center
  background-size cover, cover
  background-color c-dark-orange
  color c-white

  &:before
    position absolute
    left 0
    right 0
    top 0
    height 4px
    content ''
    background linear-gradient(to right, c-transparent 0, c-lighter-gray 100%)

  .at-header-gradient
    background-image linear-gradient(c-transparent 0%, rgba(c-dark-orange, 0.9))

  .at-title
    text-shadow 2px 2px c-black-text
    code
      color inherit
      background-color transparent

  .at-teaser
    color c-yellow-highlight-04
    background-color rgba(c-black, 0.25)
    background linear-gradient(to right, rgba(c-black, 0.3), rgba(c-black, 0.2))

    a:not(.md-heading)
      color c-yellow-highlight
      code
        color c-dark-orange
      &:visited
        background-color rgba(c-yellow-highlight, o-visited)
      &:visited .md-code-inline:before
        background-color c-yellow-highlight
      &:active
        outline-color c-yellow-highlight
      &:hover
        border-bottom-color c-yellow-highlight

.at-header-button
  display inline-block
  float right
  padding 5px 10px
  background linear-gradient(to right, lighten(c-dark-orange, 8%) 33%, c-dark-orange 100%)
  color c-white
  f-use-subheading()

  &:hover
    background c-dark-orange

.at-trivia
  margin-bottom 20px

.at-trivia-name
  f-use-subheading()

.at-trivia-name,
.at-trivia-social
  margin-left 10px

.at-trivia-details
  margin-left 60px
  margin-top 20px
  f-use-subheading()
  font-style italic
  line-height 48px

.at-trivia-separator
  color c-lighter-gray

.at-trivia,
.at-editor-note,
.at-introduction,
.at-body
  padding 20px

.at-siblings
  margin 0 20px

.at-editor-note
  background-color c-yellow-highlight-01
  &:after
    display block
    text-align right
    font-style italic
    content '— Editor’s note.'
    margin-top 10px
    f-use-subheading()

.at-body
  position relative

  &:before
    position absolute
    left 0
    right 0
    bottom -4px
    height 4px
    content ''
    background linear-gradient(to right, c-white 0, c-yellow-highlight 66%, c-pink 100%)
    max-width 800px
    margin 0 20px

.at-subscribe
  margin 0 20px 40px

@media screen and (min-width: 700px)
  .at-trivia-details
    margin 0
    float right

@media screen and (min-width: 768px)
  .at-trivia,
  .at-teaser-markdown,
  .at-editor-note,
  .at-introduction,
  .at-body
    padding 20px 40px

  .at-body:before
    margin 0 40px

  .at-subscribe
    margin 0 40px 40px
    max-width 800px

  .at-siblings
    max-width 800px
    margin 0 40px

  .at-title
    padding 20px 40px
    font-size 3em
    text-align inherit

    /.ly-custom-heading &
      font-size 4em

@media screen and (min-width: 1200px)
  .at-container .de-sidebar
    padding-top 20px

@media screen and (min-width: 1400px)
  .at-body:before,
  .at-subscribe,
  .at-siblings
    max-width 1000px

.at-trivia
  padding-top 0
