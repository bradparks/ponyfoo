.ly-custom-subheadings .at-teaser
  font-family f-subheading

.at-teaser
  position relative
  background linear-gradient(to bottom, rgba(lighten(c-yellow, 75%), 0.3) 0, rgba(lighten(c-yellow, 65%), 1) 100%)
  &:after
    position absolute
    left 0
    right 0
    bottom 0
    height 4px
    content ''
    rainbow()

.at-teaser-markdown,
.at-introduction,
.at-body
  padding 20px 20px

.at-siblings
  margin 0 20px

.at-body
  position relative

  &:before
    position absolute
    left 0
    right 0
    bottom -4px
    height 4px
    content ''
    background linear-gradient(to right, c-white 0, c-yellow-highlight 66%, c-pink 100%)
    max-width 800px
    margin 0 20px

.at-subscribe
  margin 0 20px 40px

@media screen and (min-width: 768px)
  .at-teaser-markdown,
  .at-introduction,
  .at-body
    padding 20px 40px

  .at-body:before
    margin 0 40px

  .at-subscribe
    margin 0 40px 40px
    max-width 800px

  .at-siblings
    max-width 800px
    margin 0 40px

@media screen and (min-width: 1200px)
  .at-container .de-sidebar
    padding-top 20px

@media screen and (min-width: 1400px)
  .at-body:before
  .at-subscribe,
  .at-siblings
    max-width 1000px
