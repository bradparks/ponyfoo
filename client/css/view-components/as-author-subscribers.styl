.as-commands
  text-align right

.as-verified
  text-align center
  width 45px

.as-actions .an-siblings
  margin 0

.as-source
  padding 2px 4px
  color c-white
.as-source-landed
  background-color c-yellow-highlight
  color c-black-text
.as-source-weekly
  background-color c-dark-green
  color c-light-green
.as-source-article
  background-color c-dark-orange
.as-source-comment
  background-color c-pink
.as-source-sidebar
  background-color c-purple
.as-source-twitter
  background-color c-twitter-blue
.as-source-unverified
  background-color c-blue
.as-source-migration
  background-color c-gray

.as-topic
  color c-black-text
  text-transform capitalize
  margin-right 10px
  &:last-child
    margin-right 0

@media only screen and (max-width: 950px)
  .as-verified
    text-align left
    width inherit

  .as-topics
    min-height 10px
    margin-bottom -10px

  .as-topic
    margin-bottom 10px
