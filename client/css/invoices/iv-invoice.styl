.iv-container
  position relative
  background-color c-light
  padding 20px

.iv-logo
  position absolute
  right 20px

.iv-header
  font-weight bold

.iv-table
  width 100%
  border-spacing 15px
  border-collapse separate

  td
    padding 10px

.iv-head th
  font-family f-heading
  font-size 24px
  border-bottom 6px dotted darken(c-orange, 25%)

  &:nth-child(2)
    border-bottom-color c-red
  &:nth-child(3)
    border-bottom-color c-purple
  &:nth-child(4)
    border-bottom-color c-dark-turquoise

.iv-foot
  font-weight bold

.iv-paid
  position absolute
  top 50%
  left 50%
  margin-left -220px
  margin-top -115px
  opacity 0.7
  color c-dark-turquoise
  font-family f-subheading
  font-weight bold
  font-size 128px

.iv-paid-text
  display block
  border 15px solid c-dark-turquoise
  padding 20px 40px
  transform rotate(-45deg)
  text-shadow 3px 3px 0 c-pink-light
  box-shadow 3px 3px 0 c-pink-light
