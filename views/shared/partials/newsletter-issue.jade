- permalink = permalink || authority + '/weekly/' + issue.slug
table.wy-table.wy-container.table-not-responsive
  tr
    td.wy-td
      table.wy-table
        tr
          td.wy-td.wy-header
            table(cellpadding='0', cellspacing='0', border='0', width='100%')
              tr
                td.wy-header-td(background=authority + '/img/banners/branded-shorter.png', bgcolor='#e92c6c', valign='top')
                  <!--[if gte mso 9]>
                  <v:rect xmlns:v='urn:schemas-microsoft-com:vml' fill='true' stroke='false' style='mso-width-percent:1000;'>
                  <v:fill type='tile' src=authority + '/img/banners/branded-shorter.png' color='#e92c6c' />
                  <v:textbox style='mso-fit-shape-to-text:true' inset='0,0,0,0'>
                  <![endif]-->
                  div.wy-header-content
                    a.wy-header-text(href=authority + '/weekly') Pony Foo Weekly
                    a.wy-issue.lk-link.lk-black.lk-clean(href=permalink)
                      span.wy-issue-content
                        span='Issue #' + issue.slug
                        span.wy-issue-separator=' \u2014 '
                        span.wy-issue-publication(datetime=issue.publication.datetime, aria-label=issue.publication.title)=issue.publication.text
                  <!--[if gte mso 9]>
                  </v:textbox>
                  </v:rect>
                  <![endif]-->
      if thanks
        table.wy-table
          tr
            td.wy-td.md-markdown
              div.wy-section-thanks
                p As a token of our appreciation for your patronage of Pony Foo, we’re delivering Pony Foo Weekly to you a full day in advance of everyone else!
                p.wy-thanks-again Thank you so much for your support.
      table.wy-table
        tr
          td.wy-td.md-markdown
            div.wy-section-summary!=issue.summaryHtml
      table.wy-table
        tr
          td.wy-td
            div.wy-content!=issue.contentHtml

      if emailFormat
        table.wy-table
          tr
            td.wy-td.wy-footer-cell(itemprop='potentialAction', itemscope, itemtype='http://schema.org/ViewAction')
              meta(itemprop='name', content='See web version')
              meta(itemprop='description', content='See weekly newsletter issue #' + issue.slug + ' on the web – Pony Foo')
              span(itemprop='target')
                a.wy-read-online.lk-link.lk-clean(itemprop='url', href=permalink) Read this issue on ponyfoo.com
          tr
            td.wy-td.wy-footer-cell
              span You can leave your feedback, comments, or suggestions in there, too!
