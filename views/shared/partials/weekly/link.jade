div(class='wy-section-link' + (item.subtype ? ' wy-section-link-' + item.subtype : ''))
  table.wy-table
    tr
      td.wy-td
        div.wy-link-title-section
          - fg = item.foreground ? 'color:' + item.foreground + ';' : ''
          - bg = item.background ? 'background-color:' + item.background : ''
          a.wy-link-title.md-markdown.md-markdown-inline(href=item.href, style=fg + bg, target='_blank')!=item.titleHtml
          each tag in item.tags
            - tagInfo = knownTags[tag]
            if tagInfo
              - fg = tagInfo.foreground ? 'color:' + tagInfo.foreground + ';' : ''
              - bg = tagInfo.background ? 'background-color:' + tagInfo.background : ''
              span.wy-link-tag(style=fg + bg)=tagInfo.label
            else
              span.wy-link-tag=tag

        table
          tr
            td(class='wy-td ' + (item.image ? 'wy-link-cell-before-image' : ''))
              div.wy-link-description-section
                div.wy-link-description.md-markdown!=item.descriptionHtml
              if item.source
                div.wy-link-source-section
                  if item.sourceHref
                    a.wy-link-source(href=item.sourceHref, target='_blank')=item.source
                  else
                    span.wy-link-source.wy-link-source-plain=item.source
                  if item.sponsored
                    span.wy-link-tag.wy-link-sponsor Sponsored
            if item.image
              td.wy-td.wy-link-cell-image
                a.wy-link-image-anchor(href=item.href, target='_blank')
                  img.wy-link-image(src=item.image, alt='')
