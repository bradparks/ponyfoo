mixin avatar
  img.rt-avatar(src=profile.gravatar, alt='')

article.rt-profile-section
  section.rt-avatar-section
    if !profilePage
      a(href='/writers/' + profile.slug, aria-label='Check out their profile page!')
        +avatar
    else if profile.twitter
      a(href='https://twitter.com/' + profile.twitter, target='_blank', aria-label='Follow them on Twitter!')
        +avatar
    else if profile.website
      a(href=profile.website, target='_blank', aria-label='Check out their website!')
        +avatar
    else
      +avatar

  if !profilePage
    section.rts-writer-name
      a.lk-link(href='/writers/' + profile.slug, aria-label='Check out their profile page!')=profile.displayName

  if profile.twitter || profile.website
    section.rt-social
      if profile.twitter
        a.rt-social-link.lk-link.lk-twitter.fa.fa-twitter(
          href='https://twitter.com/' + profile.twitter,
          target='_blank'
        )

      if profile.website
        a.rt-social-link.lk-link.lk-black.fa.fa-bookmark(
          href=profile.website,
          target='_blank'
        )
