ul(style='padding-left: 20px;')
  include ../../shared/marketing/subscriber-features

p(itemprop='potentialAction', itemscope, itemtype='http://schema.org/ConfirmAction')
  meta(itemprop='name', content='Confirm Subscription')
  meta(itemprop='description', content='Confirm Subscription – Pony Foo')
