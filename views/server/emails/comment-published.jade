div
  a(href!=authority + host.permalink)
    h1!=host.titleHtml

div(style='background-color: #900070; color: #fcfcfc; padding: 8px; border-bottom: 2px solid #ffe270;')
  -  site = comment.site && comment.site.replace(/https?:\/\//, '');
  if site
    a(href!=comment.site, style='color: #fcfcfc')
      img(src='cid:gravatar', alt='', style='vertical-align: middle;')
      span!='&nbsp;'
      span=' ' + comment.author
  else
    img(src='cid:gravatar', alt='', style='vertical-align: middle;')
    span!='&nbsp;&nbsp;'
    span=' ' + comment.author
  span=' posted a new comment!'

div.md-markdown(style='padding: 20px; background-color: #fcf9ee;')!=comment.content

div(style='text-align: center;', itemprop='potentialAction', itemscope, itemtype='http://schema.org/ViewAction')
  meta(itemprop='name', content='Reply')
