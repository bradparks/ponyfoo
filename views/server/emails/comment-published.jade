div
  a(href!=authority + host.permalink)
    h1!=host.titleHtml

p(style='background-color: #f3720d; color: #fcfcfc; padding: 8px; border-bottom: 2px solid #e92c6c;')
  -  site = comment.site && comment.site.replace(/https?:\/\//, '');
  if site
    a(href!=comment.site, style='color: #fcfcfc')
      img(src='cid:gravatar', alt='', style='vertical-align: middle;')
      span!='&nbsp;'
      span=' ' + comment.author
  else
    img(src='cid:gravatar', alt='', style='vertical-align: middle;')
    span!='&nbsp;&nbsp;'
    span=' ' + comment.author
  span=' posted a new comment!'

div.md-markdown(style='padding: 20px; background-color: #fff9f4;')!=comment.content

p(itemprop='potentialAction', itemscope, itemtype='http://schema.org/ViewAction')
  meta(itemprop='name', content='Reply')
