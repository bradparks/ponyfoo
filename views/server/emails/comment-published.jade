  span(itemprop='target')
    a(itemprop='url', style='margin-top: 25px; padding: 20px; background-color: #1686a2; color: #fff; border-bottom: 2px solid #5aa9bc; display: inline-block; font-size: 28px;', href=authority + comment.permalink) Reply

