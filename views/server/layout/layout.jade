- notLean = leanLayout !== true

include logo-comment
doctype html
html(lang='en', itemscope, itemtype='http://schema.org/Blog', class=(ua ? 'ua-' + ua : ''))
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title=model.title

    include icons

    link(rel='manifest', href='/manifest.json')
    meta(name='mobile-web-app-capable', content='yes')

    include metadata

    if model.inlineStyles
      style=model.inlineStyles.value
      script!=styleLoader
      noscript
        link(rel='stylesheet', type='text/css', href='/css/all.css')
    else
      link(rel='stylesheet', type='text/css', href='/css/all.css')

    script!=fontLoader

    noscript
      style.
        .js-only{display:none !important}

  body#top
    if notLean
      header.ly-header.vw-title
        h1.go-logo-container
          span.go-anchor.gg-container
            include logo
          span.go-text
            a.lk-rainbows(href='/') ponyfoo.com
        include header-navigation

      include navigation

      if model.flash
        include ../../shared/partials/flash

    main.ly-main!=partial

    if notLean
      footer.fn-footer.ly-footer
        include footer-navigation

      script!=javascriptLoader
